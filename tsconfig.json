{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "typings/*"
      ]
    },
    "outDir": "./build"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
